<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
	<Button android:text="Detect Rate" android:id="@+id/btnDectRate" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Spinner android:id="@+id/spnRate" android:layout_width="wrap_content" android:layout_height="wrap_content"></Spinner>
</LinearLayout>
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
	<Button android:text="Start" android:id="@+id/btnStart" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Button android:text="Stop" android:id="@+id/btnStop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:enabled="false"></Button>
</LinearLayout>
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/txtInterval" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="walk"/>
    <EditText android:id="@+id/edtInterval" android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="numberDecimal" android:hint="type second" />
</LinearLayout>
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
    <Button android:id="@+id/btnAddInterval" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Add"></Button>
    <Button android:id="@+id/btnUndoInterval" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Undo"></Button> 
</LinearLayout>
<ListView android:id="@+id/lstInterval" android:layout_width="fill_parent" android:layout_height="wrap_content"></ListView>
</LinearLayout>
